{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "sh",
  "isShellCommand": true,
  "args": ["-c"],
  "showOutput": "silent",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "build",      
      "args": ["tsc -p ."],
      "problemMatcher": "$tsc"      
    },
    {
      "taskName": "test",      
      "args": ["npm test"],
      "problemMatcher": {
        "owner": "tsc",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
          "regexp": "(.+)"
        }
      }
    }
  ]
}