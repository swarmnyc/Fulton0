{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "listFiles": true,
        "outDir": "../js",
        "rootDir": "./",
        "removeComments": false,
        "experimentalDecorators": true,
        "allowJs": false,
        "typeRoots": [
            "../node_modules/@types",
            "custom-types"
        ]
    },
    "exclude": [
        "example_project/**/*",
        "example_project",
        "node_modules"
    ]
}
