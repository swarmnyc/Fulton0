{
  "name": "swarm-web-framework",
  "version": "1.0.1",
  "description": "A web app framework for koa written in typescript",
  "main": "build/main.js",
  "types": "./src/app/framework/index.d.ts",
  "private": true,
  "scripts": {
    "start": "node build/main.js",
    "postinstall": "cd src && typings install",
    "prebuild": "rimraf build",
    "test": "npm run build && alsatian \"./build/app/**/*.spec.js\"",
    "check-coverage": "nyc --reporter=lcov --reporter=html npm run test && nyc report",
    "build": "tsc -p ./src || true",
    "package": "rm -f docker/worker/app.package.tar.gz && rm -f docker/worker/package.json && rimraf build && tsc -p && cp package.json docker/worker/package.json && tar czf app.package.tar.gz build && mv app.package.tar.gz docker/worker/app.package.tar.gz && rimraf build",
    "clean": "rimraf build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joeyfromspace/swarm-monitor"
  },
  "author": "Joey Lappin <joey@swarmnyc.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "alsatian": "^2.0.0",
    "aws-sdk": "^2.95.0",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "3.4.6",
    "co": "4.6.0",
    "csv-parse": "^1.2.1",
    "express": "4.14.0",
    "fs-extra": "1.0.0",
    "grant-koa": "3.6.5",
    "koa": "2.2.0",
    "koa-body": "^2.3.0",
    "koa-bodyparser": "4.2.0",
    "koa-conditional-get": "1.0.3",
    "koa-cors": "git://github.com/kunyan/koa-cors.git#next",
    "koa-docs": "git://github.com/a-s-o/koa-docs.git#master",
    "koa-etag": "2.1.1",
    "koa-joi-router": "5.0.0",
    "koa-router": "^7.2.1",
    "koa-send": "^4.1.0",
    "koa-static": "^4.0.1",
    "koa-static-server": "^1.3.2",
    "lodash": "4.17.2",
    "moment": "2.17.0",
    "mongodb": "2.2.11",
    "mongorito": "2.2.0",
    "nodemailer": "^4.0.1",
    "oauth2-server": "2.4.1",
    "qs": "6.4.0",
    "redis": "2.6.5",
    "request": "2.79.0",
    "request-promise": "^4.1.1",
    "request-promise-native": "1.0.3",
    "source-map-support": "0.4.6",
    "typescript": "^2.0.10",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "@types/csv-parse": "^1.1.9",
    "@types/dotenv": "2.0.20",
    "@types/koa": "2.0.38",
    "@types/koa-bodyparser": "3.0.23",
    "@types/koa-router": "7.0.21",
    "@types/node": "^8.0.17",
    "copyfiles": "^1.2.0",
    "dotenv": "4.0.0",
    "faker": "3.1.0",
    "rimraf": "2.5.4",
    "sinon": "1.17.6",
    "typescript": "2.0.10",
    "typings": "2.0.0"
  }
}
