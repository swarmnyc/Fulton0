{
  "name": "swarm-monitor",
  "version": "1.0.0",
  "description": "A web app framework for koa written in typescript",
  "main": "build/main.js",
  "types": "./src/app/framework/index.d.ts",
  "private": true,
  "scripts": {
    "start": "node build/main.js",
    "postinstall": "cd src && typings install",
    "prebuild": "rimraf build",
    "test": "MONGO_URI=mongodb://localhost:27017/spec-tests istanbul cover node_modules/.bin/_mocha -- ./build/test --recursive --no-timeouts --require source-map-support/register || true",
    "build": "tsc -p ./src || true",
    "package": "rm -f docker/worker/app.package.tar.gz && rm -f docker/worker/package.json && rimraf build && tsc -p && cp package.json docker/worker/package.json && tar czf app.package.tar.gz build && mv app.package.tar.gz docker/worker/app.package.tar.gz && rimraf build",
    "clean": "rimraf build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joeyfromspace/swarm-monitor"
  },
  "author": "Joey Lappin <joey@swarmnyc.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "3.4.6",
    "co": "4.6.0",
    "express": "4.14.0",
    "fs-extra": "1.0.0",
    "grant-koa": "3.6.5",
    "koa": "1.2.4",
    "koa-bodyparser": "2.3.0",
    "koa-cors": "0.0.16",
    "koa-router": "5.4.0",
    "lodash": "4.17.2",
    "moment": "2.17.0",
    "mongodb": "2.2.11",
    "mongorito": "2.2.0",
    "oauth2-server": "2.4.1",
    "request": "2.79.0",
    "source-map-support": "0.4.6",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-http": "3.0.0",
    "faker": "3.1.0",
    "istanbul": "0.4.5",
    "mocha": "3.1.2",
    "rimraf": "2.5.4",
    "sinon": "1.17.6",
    "typescript": "2.0.10",
    "typings": "2.0.0"
  }
}
